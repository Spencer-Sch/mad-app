{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2018",
    "rootDir": ".",
    "outDir": "dist-scripts",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/supabase/scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
